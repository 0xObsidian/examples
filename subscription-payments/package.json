{
  "name": "hardhat-project",
  "scripts": {
    "clean": "hardhat clean && rm -rf cache cache-zk artifacts artifacts-zk artifacts-abstract deployments-zk deployments-abstract anvil-zksync.log anvil-abstract.log",
    "compile": "hardhat compile --network abstractTestnet",
    "test": "hardhat test",
    "deploy": "hardhat deploy-zksync --script deploy.ts --network abstractTestnet",
    "verify": "hardhat verify --network abstractTestnet",
    "check-balance": "hardhat run --network abstractTestnet scripts/check-balance.ts",
    "format": "prettier --write \"**/*.{ts,js,sol,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,sol,json,md}\""
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync": "^1.3.0",
    "@matterlabs/hardhat-zksync-deploy": "^1.6.0",
    "@matterlabs/hardhat-zksync-solc": "^1.2.5",
    "@matterlabs/hardhat-zksync-verify": "^1.7.1",
    "@matterlabs/zksync-contracts": "^0.6.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/test-helpers": "^0.5.16",
    "chai": "^4.5.0",
    "ethers": "^6.13.4",
    "hardhat": "^2.22.17",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^5.0.3",
    "zksync-ethers": "^6.15.3"
  }
}
